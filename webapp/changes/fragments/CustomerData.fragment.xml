<!-- Use stable and unique id's!-->
<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:smartField="sap.ui.comp.smartfield" xmlns:smartForm="sap.ui.comp.smartform" xmlns:uxap="sap.uxap">
   <uxap:ObjectPageSection 
        id="idSection0" 
        title="section0" 
        titleUppercase="false"
        visible="{
            parts: [
                { path: 'ZZ1_BSART_HEADER_PDI' },
                { path: 'ZZ1_BSTYP_HEADER_PDI' }
            ], 
            formatter: '.extension.ZMM_PO_MANAGES1.ObjectExtension.handleTabVisibility'
        }">
        
      <uxap:subSections>
         <uxap:ObjectPageSubSection 
            id="idSection0SubSection0" 
            title="Customer Data" 
            titleUppercase="false">
            <uxap:blocks>

               <smartForm:SmartForm id="idSmartForm0" editable="false">
                  <smartForm:Group id="idSmartFormGroup0">
                     <smartForm:GroupElement id="idSmartFormGroupElement0">
                        <smartField:SmartField id="idSubSectionField0" value="{ZZ1_WBSELEMENT_PDI}" />
                     </smartForm:GroupElement>
                     <smartForm:GroupElement id="idSmartFormGroupElement1">
                        <smartField:SmartField id="idSubSectionField1" value="{ZZ1_IMPRESSION_NUM_PDI}" />
                     </smartForm:GroupElement>
                  </smartForm:Group>
               </smartForm:SmartForm>

            </uxap:blocks>
         </uxap:ObjectPageSubSection>
      </uxap:subSections>
      
   </uxap:ObjectPageSection>
</core:FragmentDefinition>